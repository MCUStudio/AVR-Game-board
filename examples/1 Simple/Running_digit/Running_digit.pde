/*
  Running leds on digital display for AVR Game board

*/

#include <AvrGameBoard.h>

uint8_t screens[] = {
  0x08, 0x00, 0x00,
  0x10, 0x00, 0x00,
  0x20, 0x00, 0x00,
  0x40, 0x00, 0x00,
  0x00, 0x40, 0x00,
  0x00, 0x00, 0x40,
  0x00, 0x00, 0x02,
  0x00, 0x00, 0x04,
  0x00, 0x00, 0x08,
  0x00, 0x08, 0x00
};

void setup() {
  GameBoard.begin (); 
}

void loop() {
  for (int k = 0; k<10; k++) {
    for (int i = 0; i<3; i++) {
      GameBoard.digit[i] = screens[k*3 + i];
    }
    GameBoard.show ();
    delay (200);
  }
}